    <script>
        // 削除フォームのバリデーション
        const deleteForm = document.getElementById('deleteForm');
        if (deleteForm) {
            deleteForm.addEventListener('submit', (e) => {
                const checkboxes = document.querySelectorAll('input[name="delnum"]:checked');
                if (checkboxes.length === 0) {
                    e.preventDefault();
                    alert('削除するURLを選択してください');
                } else {
                    if (!confirm(`選択した${checkboxes.length}個のURLを削除しますか？`)) {
                        e.preventDefault();
                    }
                }
            });
        }

        // 全選択機能
        const selectAllCheckbox = document.getElementById('selectAll');
        const urlCheckboxes = document.querySelectorAll('input[name="delnum"]');
        const selectedCountElement = document.getElementById('selectedCount');

        if (selectAllCheckbox) {
            selectAllCheckbox.addEventListener('change', function () {
                urlCheckboxes.forEach(checkbox => {
                    checkbox.checked = this.checked;
                });
                updateSelectedCount();
            });
        }

        // 選択数の更新
        urlCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', updateSelectedCount);
        });

        function updateSelectedCount() {
            const checkedCount = document.querySelectorAll('input[name="delnum"]:checked').length;
            if (selectedCountElement) {
                selectedCountElement.textContent = `${checkedCount}個選択中`;
            }

            // 全選択チェックボックスの状態を更新
            if (selectAllCheckbox) {
                selectAllCheckbox.checked = checkedCount === urlCheckboxes.length && checkedCount > 0;
                selectAllCheckbox.indeterminate = checkedCount > 0 && checkedCount < urlCheckboxes.length;
            }
        }

        // 検索機能
        function searchUrls() {
            const searchInput = document.getElementById('searchInput');
            const searchTerm = searchInput.value.toLowerCase();
            const tableRows = document.querySelectorAll('tbody tr');

            tableRows.forEach(row => {
                const originalUrl = row.cells[1].textContent.toLowerCase();
                const shortUrl = row.cells[2].textContent.toLowerCase();
                const username = row.cells[3].textContent.toLowerCase();

                if (originalUrl.includes(searchTerm) || shortUrl.includes(searchTerm) || username.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        // スムーススクロール
        function scrollToSection(sectionId) {
            const element = document.getElementById(sectionId);
            if (element) {
                element.scrollIntoView({ behavior: 'smooth' });
            }
        }

        // コピー機能
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                showNotification('URLをコピーしました！', 'success');
            }).catch(err => {
                console.error('コピーに失敗しました:', err);
                showNotification('コピーに失敗しました', 'error');
            });
        }

        // 通知表示
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `fixed top-4 right-4 px-4 py-2 rounded-lg shadow-lg z-50 transition-ease text-white ${type === 'success' ? 'bg-green-600' :
                type === 'error' ? 'bg-red-600' : 'bg-blue-600'
                }`;
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // URL編集機能
        function editUrl(urlId) {
            showNotification('URL編集機能は準備中です', 'info');
        }

        // 個別削除機能
        function deleteUrl(urlId) {
            if (confirm('このURLを削除しますか？')) {
                showNotification('個別削除機能は準備中です', 'info');
            }
        }

        // データエクスポート
        function exportData() {
            const table = document.querySelector('table');
            if (!table) return;

            let csv = 'No,Original URL,Short URL,Creator,Created Date\n';
            const rows = table.querySelectorAll('tbody tr');

            rows.forEach((row, index) => {
                if (row.style.display !== 'none') {
                    const cells = row.querySelectorAll('td');
                    const data = [
                        cells[0].textContent.trim(),
                        `"${cells[1].textContent.trim()}"`,
                        `"${cells[2].textContent.trim()}"`,
                        `"${cells[3].textContent.trim()}"`,
                        `"${cells[4].textContent.trim()}"`
                    ];
                    csv += data.join(',') + '\n';
                }
            });

            const blob = new Blob([csv], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `tinyurl_export_${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);

            showNotification('データをエクスポートしました', 'success');
        }

        // ユーザー検索機能
        function searchUsers() {
            const searchTerm = document.getElementById('userSearchInput').value.toLowerCase();
            const rows = document.querySelectorAll('#userTable tbody .user-row');

            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                const uniqueId = cells[0].textContent.toLowerCase();
                const username = cells[1].textContent.toLowerCase();
                const email = cells[2].textContent.toLowerCase();

                if (uniqueId.includes(searchTerm) ||
                    username.includes(searchTerm) ||
                    email.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        // ユーザー情報エクスポート機能
        function exportUsers() {
            let csv = 'ユニークID,ユーザー名,メールアドレス,作成日時\n';

            const rows = document.querySelectorAll('#userTable tbody .user-row');
            rows.forEach(row => {
                if (row.style.display !== 'none') {
                    const cells = row.querySelectorAll('td');
                    const data = [
                        `"${cells[0].textContent.trim()}"`,
                        `"${cells[1].textContent.trim()}"`,
                        `"${cells[2].textContent.trim()}"`,
                        `"${cells[3].textContent.trim()}"`
                    ];
                    csv += data.join(',') + '\n';
                }
            });

            const blob = new Blob([csv], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `users_export_${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);

            showNotification('ユーザー情報をエクスポートしました', 'success');
        }

        // ユーザー詳細表示
        function viewUserDetails(userId) {
            // ここで詳細表示のモーダルを実装可能
            showNotification(`ユーザー詳細: ${userId}`, 'info');
        }

        // ユーザー削除確認
        function confirmDeleteUser(userId, userIdentifier) {
            if (confirm(`本当にユーザー "${userIdentifier}" を削除しますか？\n\nこの操作は取り消すことができません。`)) {
                if (confirm('削除すると、このユーザーの全てのURLも削除されます。\n\n本当に削除しますか？')) {
                    deleteUser(userId);
                }
            }
        }

        // ユーザー削除実行
        function deleteUser(userId) {
            fetch('/admin/delete-user', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ userId: userId })
            })
                .then(response => {
                    if (response.ok) {
                        showNotification('ユーザーが削除されました', 'success');
                        location.reload();
                    } else {
                        throw new Error('削除に失敗しました');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('ユーザー削除中にエラーが発生しました', 'error');
                });
        }

        // モバイルメニューのトグル
        const menuButton = document.getElementById('menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        if (menuButton && mobileMenu) {
            menuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }

        // 初期化時に選択数を更新
        updateSelectedCount();
    </script>
