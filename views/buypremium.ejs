<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>プレミアムプラン | Tiny-URL</title>
  <meta name="description" content="URLを短縮するサイトです。">
  <meta name="keywords" content="短縮,URL,URL短縮,短縮URL">
  <meta name="theme-color" content="#6E3DD9">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <script src="https://www.paypal.com/sdk/js?client-id=sb&enable-funding=venmo&currency=JPY"></script>
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #0f172a;
      color: #e2e8f0;
    }

    .gradient-text {
      background-image: linear-gradient(90deg, #6366f1, #a855f7);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .transition-ease {
      transition: all 0.3s ease-in-out;
    }

    .plan-card {
      position: relative;
      overflow: hidden;
    }

    .plan-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #6366f1, #a855f7);
    }

    .popular-badge {
      background: linear-gradient(135deg, #6366f1, #a855f7);
    }

    /* PayPalボタンのスタイル統一 */
    #paypal-button-monthly,
    #paypal-button-yearly {
      min-height: 60px;
    }

    /* プランカードの高さ統一 */
    .plan-card {
      min-height: 500px;
    }
  </style>
</head>

<body class="min-h-screen flex flex-col antialiased">
  <header class="p-4 sm:p-6 bg-slate-800/80 backdrop-blur-sm shadow-lg sticky top-0 z-10">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <a href="/" class="text-3xl font-extrabold gradient-text tracking-tight">Tiny-URL</a>
      <nav class="hidden md:flex space-x-6 items-center">
        <a href="/" class="text-slate-300 hover:text-indigo-400 transition-ease text-sm font-medium">ホーム</a>
        <a href="/api/reference"
          class="text-slate-300 hover:text-indigo-400 transition-ease text-sm font-medium">APIリファレンス</a>
        <% if (name) { %>
          <a href="/dashboard"
            class="text-slate-300 hover:text-indigo-400 transition-ease text-sm font-medium">ダッシュボード</a>
          <a href="/logout"
            class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-semibold rounded-lg shadow-md transition-ease">ログアウト</a>
          <% } else { %>
            <a href="/login"
              class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold rounded-lg shadow-md transition-ease">ログイン</a>
            <% } %>
      </nav>
      <button id="menu-button" class="md:hidden p-2 rounded-lg text-slate-300 hover:bg-slate-700 transition-ease"
        aria-label="メニューを開く" title="メニュー">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7">
          </path>
        </svg>
      </button>
    </div>
    <!-- モバイルメニュー -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 space-y-2">
      <a href="/" class="block px-4 py-2 text-slate-300 hover:bg-slate-700 rounded-lg transition-ease">ホーム</a>
      <a href="/api/reference"
        class="block px-4 py-2 text-slate-300 hover:bg-slate-700 rounded-lg transition-ease">APIリファレンス</a>
      <% if (name) { %>
        <a href="/dashboard"
          class="block px-4 py-2 text-slate-300 hover:bg-slate-700 rounded-lg transition-ease">ダッシュボード</a>
        <a href="/logout"
          class="block px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-ease">ログアウト</a>
        <% } else { %>
          <a href="/login"
            class="block px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition-ease">ログイン</a>
          <% } %>
    </div>
  </header>

  <main class="flex-grow p-4 sm:p-8">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold gradient-text mb-4">プレミアムプラン</h1>
        <p class="text-lg sm:text-xl text-slate-400">より多くの機能と柔軟性をお求めの方へ</p>
        <% if (name) { %>
          <div class="mt-6 text-slate-300">
            <span class="text-indigo-400 font-semibold">
              <%= name %>
            </span>さん、こんにちは！
            <br>
            <span class="text-sm text-slate-400">現在：<%= premiu ? 'プレミアムプラン' : 'フリープラン' %>をご利用中</span>
          </div>
          <% } %>
      </div>

      <% if (name) { %>
        <!-- プラン選択カード -->
        <div class="grid md:grid-cols-2 gap-6 mb-12 items-stretch">
          <!-- 月額プラン -->
          <div class="plan-card bg-slate-800 p-8 rounded-2xl shadow-xl border border-slate-700/50 flex flex-col h-full">
            <div class="text-center mb-6">
              <h2 class="text-2xl font-bold text-white mb-2">月額プラン</h2>
              <div class="flex items-baseline justify-center mb-4">
                <span class="text-5xl font-extrabold gradient-text">¥20</span>
                <span class="text-slate-400 ml-2">/月</span>
              </div>
              <p class="text-slate-400 text-sm">月ごとの柔軟な契約</p>
            </div>
            <ul class="space-y-3 mb-8 flex-grow">
              <li class="flex items-center text-slate-300">
                <svg class="w-5 h-5 mr-3 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                無制限のURL短縮
              </li>
              <li class="flex items-center text-slate-300">
                <svg class="w-5 h-5 mr-3 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                カスタムURL設定
              </li>
              <li class="flex items-center text-slate-300">
                <svg class="w-5 h-5 mr-3 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                詳細なアクセス統計
              </li>
              <li class="flex items-center text-slate-300">
                <svg class="w-5 h-5 mr-3 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                優先サポート
              </li>
            </ul>
            <div class="mt-auto">
              <div id="paypal-button-monthly"></div>
            </div>
          </div>

          <!-- 年額プラン（人気） -->
          <div
            class="plan-card bg-slate-800 p-8 rounded-2xl shadow-xl border border-indigo-500/50 relative flex flex-col h-full">
            <div class="absolute top-4 right-4">
              <span class="popular-badge px-3 py-1 rounded-full text-white text-xs font-bold shadow-lg">人気</span>
            </div>
            <div class="text-center mb-6">
              <h2 class="text-2xl font-bold text-white mb-2">年額プラン</h2>
              <div class="flex items-baseline justify-center mb-2">
                <span class="text-5xl font-extrabold gradient-text">¥200</span>
                <span class="text-slate-400 ml-2">/年</span>
              </div>
              <div class="mb-4">
                <span class="text-green-400 text-sm font-semibold">月額換算 ¥16.7/月</span>
                <span class="block text-slate-500 text-xs">2ヶ月分お得！</span>
              </div>
              <p class="text-slate-400 text-sm">長期利用でさらにお得</p>
            </div>
            <ul class="space-y-3 mb-8 flex-grow">
              <li class="flex items-center text-slate-300">
                <svg class="w-5 h-5 mr-3 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                無制限のURL短縮
              </li>
              <li class="flex items-center text-slate-300">
                <svg class="w-5 h-5 mr-3 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                カスタムURL設定
              </li>
              <li class="flex items-center text-slate-300">
                <svg class="w-5 h-5 mr-3 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                詳細なアクセス統計
              </li>
              <li class="flex items-center text-slate-300">
                <svg class="w-5 h-5 mr-3 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                優先サポート
              </li>
              <li class="flex items-center text-indigo-300 font-semibold">
                <svg class="w-5 h-5 mr-3 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                17%割引（年間¥40お得）
              </li>
            </ul>
            <div class="mt-auto">
              <div id="paypal-button-yearly"></div>
            </div>
          </div>
        </div>

        <!-- 機能比較表 -->
        <div class="bg-slate-800 p-6 sm:p-8 rounded-2xl shadow-xl border border-slate-700/50 mb-8">
          <h2 class="text-2xl font-bold text-white mb-6 text-center">プラン比較</h2>
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b border-slate-700">
                  <th class="text-left py-4 px-4 text-slate-400 font-semibold">機能</th>
                  <th class="text-center py-4 px-4 text-slate-400 font-semibold">無料プラン</th>
                  <th class="text-center py-4 px-4 text-indigo-400 font-semibold">プレミアムプラン</th>
                </tr>
              </thead>
              <tbody>
                <tr class="border-b border-slate-700/50">
                  <td class="py-4 px-4 text-slate-300">URL短縮数</td>
                  <td class="text-center py-4 px-4 text-slate-400">制限あり</td>
                  <td class="text-center py-4 px-4 text-green-400 font-semibold">無制限</td>
                </tr>
                <tr class="border-b border-slate-700/50">
                  <td class="py-4 px-4 text-slate-300">カスタムURL</td>
                  <td class="text-center py-4 px-4 text-red-400">✗</td>
                  <td class="text-center py-4 px-4 text-green-400">✓</td>
                </tr>
                <tr class="border-b border-slate-700/50">
                  <td class="py-4 px-4 text-slate-300">アクセス統計</td>
                  <td class="text-center py-4 px-4 text-slate-400">基本のみ</td>
                  <td class="text-center py-4 px-4 text-green-400">詳細</td>
                </tr>
                <tr class="border-b border-slate-700/50">
                  <td class="py-4 px-4 text-slate-300">URL有効期限</td>
                  <td class="text-center py-4 px-4 text-slate-400">30日</td>
                  <td class="text-center py-4 px-4 text-green-400">無期限</td>
                </tr>
                <tr>
                  <td class="py-4 px-4 text-slate-300">サポート</td>
                  <td class="text-center py-4 px-4 text-slate-400">標準</td>
                  <td class="text-center py-4 px-4 text-green-400">優先</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <!-- 注意事項 -->
        <div class="bg-slate-800/50 p-6 rounded-xl border border-slate-700/50">
          <h3 class="text-lg font-bold text-white mb-3">ご利用にあたって</h3>
          <ul class="space-y-2 text-sm text-slate-400">
            <li class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 text-indigo-400 flex-shrink-0" fill="none" stroke="currentColor"
                viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              お支払いはPayPalを通じて安全に処理されます
            </li>
            <li class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 text-indigo-400 flex-shrink-0" fill="none" stroke="currentColor"
                viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              プレミアム機能は決済完了後すぐにご利用いただけます
            </li>
            <li class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-0.5 text-indigo-400 flex-shrink-0" fill="none" stroke="currentColor"
                viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              解約はいつでも可能です（次回更新日まで利用可能）
            </li>
          </ul>
        </div>
        <% } else { %>
          <!-- 未ログイン時の表示 -->
          <div class="max-w-2xl mx-auto text-center">
            <div class="bg-slate-800 p-8 sm:p-12 rounded-2xl shadow-xl border border-slate-700/50">
              <div class="mb-6">
                <svg class="w-20 h-20 mx-auto text-indigo-500 mb-4" fill="none" stroke="currentColor"
                  viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z">
                  </path>
                </svg>
                <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4">ログインが必要です</h2>
                <p class="text-slate-400 mb-8">プレミアムプランをご購入いただくには、まずログインしてください。</p>
              </div>
              <div class="space-y-4">
                <a href="/login"
                  class="block w-full py-4 bg-indigo-600 hover:bg-indigo-500 text-white font-bold text-lg rounded-xl shadow-lg hover:shadow-indigo-500/50 transition-ease active:scale-[0.99]">
                  メール・パスワードでログイン
                </a>
                <div class="text-center text-slate-500 text-sm">または</div>
                <a href="https://discord.com/api/oauth2/authorize?client_id=952497517487071292&redirect_uri=https%3A%2F%2Forrn.net%2Fbuy&response_type=code&scope=identify"
                  class="flex items-center justify-center w-full py-4 bg-slate-700 hover:bg-slate-600 text-white font-bold text-lg rounded-xl shadow-lg transition-ease active:scale-[0.99]">
                  <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 24 24">
                    <path
                      d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z" />
                  </svg>
                  Discordでログイン
                </a>
                <p class="text-sm text-slate-400">
                  アカウントをお持ちでない方は
                  <a href="/register" class="text-indigo-400 hover:text-indigo-300 underline">こちら</a>
                  から登録
                </p>
              </div>
            </div>
          </div>
          <% } %>
    </div>
  </main>

  <footer class="p-4 sm:p-6 text-center text-slate-500 text-sm bg-slate-800 border-t border-slate-700/50">
    &copy; 2025 Tiny-URL. All rights reserved. | <a href="/policy"
      class="hover:text-indigo-400 transition-ease">プライバシーポリシー</a> | <a href="#"
      class="hover:text-indigo-400 transition-ease">お問い合わせ</a>
  </footer>

  <script>
    // モバイルメニューのトグル
    const menuButton = document.getElementById('menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  </script>

  <% if (name) { %>
    <script>
      // PayPalボタンの初期化
      // 月額プラン
      paypal.Buttons({
        style: {
          layout: 'vertical',
          color: 'blue',
          shape: 'rect',
          label: 'paypal',
          height: 50
        },
        createOrder: function (data, actions) {
          return actions.order.create({
            purchase_units: [{
              amount: {
                value: '20',
                currency_code: 'JPY'
              },
              description: 'Tiny-URL プレミアムプラン（月額）'
            }]
          });
        },
        onApprove: function (data, actions) {
          return actions.order.capture().then(function (details) {
            alert('お支払いが完了しました！プレミアム機能をお楽しみください。');
            window.location.href = '/dashboard';
          });
        },
        onError: function (err) {
          console.error('PayPalエラー:', err);
          alert('お支払い処理中にエラーが発生しました。もう一度お試しください。');
        }
      }).render('#paypal-button-monthly');

      // 年額プラン
      paypal.Buttons({
        style: {
          layout: 'vertical',
          color: 'blue',
          shape: 'rect',
          label: 'paypal',
          height: 50
        },
        createOrder: function (data, actions) {
          return actions.order.create({
            purchase_units: [{
              amount: {
                value: '200',
                currency_code: 'JPY'
              },
              description: 'Tiny-URL プレミアムプラン（年額）'
            }]
          });
        },
        onApprove: function (data, actions) {
          return actions.order.capture().then(function (details) {
            alert('お支払いが完了しました！プレミアム機能をお楽しみください。');
            window.location.href = '/dashboard';
          });
        },
        onError: function (err) {
          console.error('PayPalエラー:', err);
          alert('お支払い処理中にエラーが発生しました。もう一度お試しください。');
        }
      }).render('#paypal-button-yearly');
    </script>
    <% } %>
</body>

</html>